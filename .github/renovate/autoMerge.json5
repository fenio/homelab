{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "Auto merge pre-commits",
      matchDatasources: ["github-releases", "github-tags"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["minor", "patch"],
      matchPackageNames: [
        "sirosen/texthooks",
        "gruntwork-io/pre-commit",
        "zricethezav/gitleaks",
        "Lucas-C/pre-commit-hooks",
        "adrienverge/yamllint",
        "pre-commit/pre-commit-hooks",
      ],
    },
    {
      description: "Auto merge monitoring exporters",
      matchDatasources: ["docker", "helm"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["minor", "patch"],
      matchPackageNames: [
        "ghcr.io/prometheus/node-exporter",
        "ghcr.io/prometheus/alertmanager",
        "ghcr.io/prometheus/pushgateway",
        "ghcr.io/smartctl-exporter/smartctl-exporter",
        "prometheus-community/kube-state-metrics",
        "prometheus-community/prometheus",
      ],
      ignoreTests: true,
    },
    {
      description: "Auto merge utility applications",
      matchDatasources: ["docker", "helm"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["minor", "patch"],
      matchPackageNames: [
        "ghcr.io/containous/whoami",
        "ghcr.io/benbjohnson/litestream",
        "ghcr.io/onedr0p/homepage",
        "ghcr.io/goldpinger/goldpinger",
      ],
      ignoreTests: true,
    },
    {
      description: "Auto merge self-hosted applications (minor/patch only)",
      matchDatasources: ["docker", "helm"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["minor", "patch"],
      matchPackageNames: [
        "ghcr.io/open-webui/open-webui",
        "ghcr.io/ollama/ollama",
        "ghcr.io/searxng/searxng",
        "ghcr.io/perplexica/perplexica",
      ],
      ignoreTests: true,
    },
    {
      description: "Auto merge Flux WebUI",
      matchDatasources: ["docker", "helm"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["minor", "patch"],
      matchPackageNames: ["ghcr.io/fluxcd/webui"],
      ignoreTests: true,
    },
    {
      description: "Auto merge digest updates for all images",
      matchDatasources: ["docker"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["digest"],
      ignoreTests: true,
    },
  ],
}
