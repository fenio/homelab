{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "Flux group",
      groupName: "Flux",
      matchPackagePatterns: ["flux"],
      matchDatasources: ["docker", "github-tags"],
      versioning: "semver",
      group: {commitMessageTopic: "{{{groupName}}}"},
      separateMinorPatch: true,
    },
    {
      description: "External-Sapshotter group",
      groupName: "External Snapshotter",
      matchPackagePatterns: [
        "snapshot-controller",
        "snapshot-validation-webhook",
      ],
      group: {commitMessageTopic: "{{{groupName}}}"},
      separateMinorPatch: true,
    },
    {
      description: "Observability group",
      groupName: "Observability",
      matchPackageNames: [
        "grafana/grafana",
        "victoriametrics/victoria-metrics",
        "victoriametrics/victoria-logs",
        "coroot/coroot",
        "coroot/coroot-operator",
      ],
      group: {commitMessageTopic: "{{{groupName}}}"},
      separateMinorPatch: true,
    },
    {
      description: "Networking group",
      groupName: "Networking",
      matchPackageNames: [
        "ingress-nginx/ingress-nginx",
        "cert-manager/cert-manager",
        "external-dns/external-dns",
      ],
      group: {commitMessageTopic: "{{{groupName}}}"},
      separateMinorPatch: true,
    },
    {
      description: "Database group",
      groupName: "Database",
      matchPackageNames: [
        "cloudnative-pg/cloudnative-pg",
        "ghcr.io/cloudnative-pg/postgresql",
      ],
      group: {commitMessageTopic: "{{{groupName}}}"},
      separateMinorPatch: true,
    },
    {
      description: "Media applications group",
      groupName: "Media Applications",
      matchPackageNames: [
        "ghcr.io/onedr0p/sonarr-develop",
        "ghcr.io/onedr0p/lidarr-develop",
        "ghcr.io/onedr0p/readarr-develop",
        "ghcr.io/zoriya/helm-charts/kyoo",
      ],
      group: {commitMessageTopic: "{{{groupName}}}"},
      separateMinorPatch: true,
    },
    {
      description: "Self-hosted applications group",
      groupName: "Self-hosted Applications",
      matchPackageNames: [
        "ghcr.io/open-webui/open-webui",
        "ghcr.io/ollama/ollama",
        "ghcr.io/searxng/searxng",
      ],
      group: {commitMessageTopic: "{{{groupName}}}"},
      separateMinorPatch: true,
    },
    {
      description: "Storage and CSI group",
      groupName: "Storage and CSI",
      matchPackageNames: [
        "democratic-csi/democratic-csi",
        "snapshot-controller",
        "snapshot-validation-webhook",
      ],
      group: {commitMessageTopic: "{{{groupName}}}"},
      separateMinorPatch: true,
    },
    {
      description: "Kubernetes system components group",
      groupName: "Kubernetes System",
      matchPackageNames: [
        "kubernetes/metrics-server",
        "reloader/reloader",
        "stakater/replicator",
      ],
      group: {commitMessageTopic: "{{{groupName}}}"},
      separateMinorPatch: true,
    },
  ],
}
