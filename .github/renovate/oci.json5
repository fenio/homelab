{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "OCI Helm charts - careful updates",
      matchDatasources: ["helm"],
      matchPackagePatterns: ["^ghcr\\.io/.*/helm-charts/.*"],
      automerge: false,
      separateMinorPatch: true,
    },
    {
      description: "OCI Docker images - standard updates",
      matchDatasources: ["docker"],
      matchPackagePatterns: ["^ghcr\\.io/.*"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["minor", "patch", "digest"],
      ignoreTests: true,
    },
    {
      description: "Flux OCI repositories",
      matchDatasources: ["docker"],
      matchPackagePatterns: ["^ghcr\\.io/fluxcd/.*"],
      automerge: false,
      separateMinorPatch: true,
    },
    {
      description: "Application OCI images",
      matchDatasources: ["docker"],
      matchPackageNames: [
        "ghcr.io/open-webui/open-webui",
        "ghcr.io/ollama/ollama",
        "ghcr.io/searxng/searxng",
        "ghcr.io/perplexica/perplexica",
        "ghcr.io/onedr0p/homepage",
        "ghcr.io/onedr0p/sonarr-develop",
        "ghcr.io/onedr0p/lidarr-develop",
        "ghcr.io/onedr0p/readarr-develop",
        "ghcr.io/zoriya/kyoo",
      ],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["minor", "patch", "digest"],
      ignoreTests: true,
    },
  ],
}